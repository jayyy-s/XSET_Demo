<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/watchCard"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"

    android:background="@color/white"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/shopItemImageView"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/image_of_store_item"
            app:layout_constraintBottom_toTopOf="@+id/shopCaptionTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/lst_white_front" />

        <TextView
            android:id="@+id/shopCaptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/this_is_some_temp_text"
            android:textSize="12dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/shopItemImageView"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/this_is_some_temp_text"
            android:textColor="@color/light_gray"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shopCaptionTextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>