<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XSET_Demo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ic_launcher_xset_gray_background</item>
        <item name="colorPrimaryVariant">@color/ic_launcher_xset_gray_background</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">
            @color/ic_launcher_xset_gray_background
        </item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/asterone</item>

        <!-- prevent gray screen before splash -->
        <item name="android:windowIsTranslucent">true</item>

        <item name="colorPrimaryDark">@color/ic_launcher_xset_gray_background</item>

    </style>

    <style name="Theme.XSET_Demo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.XSET_Demo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/ic_launcher_xset_gray_background</item>
        <item name="colorAccent">@color/ic_launcher_xset_gray_background</item>
        <item name="colorPrimaryDark">@color/ic_launcher_xset_gray_background</item>
    </style>

    <style name="Theme.XSET_Demo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerTheme">
        <item name="android:fontFamily">@font/andale</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>